@model Core.Models.Contact
@{
    ViewData["Title"] = "SendMail";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<h3>Personele Mesaj Gönder</h3>

<hr />

<div class="row">
    <div class="col-md-4 offset-md-4">

    

        <form asp-action="SendMail" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Ad</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>E-Mail</label>
                <input asp-for="SendMail" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Mesaj</label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Öncelik Durumu</label>
                <select asp-for="priority" class="form-control">

                    <option>öncelikli</option>

                    <option>Öncelikli Değil</option>

                   


                </select>
            </div>

             <div class="form-group">
                <label>Aciliyet Durumu</label>
                <select asp-for="urgency" class="form-control">

                    <option>Acil</option>

                    <option>Acil Değil</option>

                  


                </select>
          
                
            <div class="form-group">
                <label  class="control-label">Dosya</label>
                <input class="form-control" type="file" name="EklenenData" />
                
            </div>
                <span asp-validation-for="priority" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input style="margin-top:10px" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>




